<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background3"
    tools:context=".DetailActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailOwner"
        android:text="Name"
        android:fontFamily="@font/bree_serif"
        android:layout_marginTop="14dp"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:textColor="@color/peach"/>

    <ImageView
        android:layout_width="220dp"
        android:layout_height="170dp"
        android:id="@+id/detailImage"
        android:padding="8dp"
        android:layout_gravity="center"
        android:src="@drawable/uploadimage"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:text="Pet name"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/detailPet"
        android:textSize="25sp"
        android:textColor="@color/peach"
        android:fontFamily="@font/bree_serif"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:text="Type"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/detailType"
        android:textSize="25sp"
        android:textColor="@color/peach"
        android:fontFamily="@font/bree_serif"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:text="Age"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/detailAge"
        android:textSize="25sp"
        android:textColor="@color/peach"
        android:fontFamily="@font/bree_serif"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:text="Sex"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/detailSex"
        android:textSize="25sp"
        android:textColor="@color/peach"
        android:fontFamily="@font/bree_serif"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:text="Color"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/detailColor"
        android:textSize="25sp"
        android:textColor="@color/peach"
        android:fontFamily="@font/bree_serif"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:text="Special Notes"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/detailSpec"
        android:textSize="25sp"
        android:textColor="@color/peach"
        android:fontFamily="@font/bree_serif"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.clans.fab.FloatingActionMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            app:menu_fab_size="normal"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="5dp"
            app:menu_colorPressed="@color/peach"
            app:menu_colorNormal="@color/peach"
            app:menu_icon="@drawable/ic_baseline_format_list_bulleted_24"
            app:menu_openDirection="up"
            app:menu_showShadow="true">


            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editButton"
                android:src="@drawable/ic_baseline_edit_24"
                app:fab_colorNormal="@color/green"
                app:fab_showShadow="true"
                app:fab_size="mini"/>

            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deleteButton"
                android:src="@drawable/ic_baseline_delete_24"
                app:fab_colorNormal="@color/red"
                app:fab_showShadow="true"
                app:fab_size="mini">

        </com.github.clans.fab.FloatingActionButton>

        </com.github.clans.fab.FloatingActionMenu>

    </RelativeLayout>


</LinearLayout>