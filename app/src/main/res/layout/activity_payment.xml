<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:gravity="bottom"
    tools:context=".PaymentActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/peach_boarder"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Calculate Payment"
                android:fontFamily="@font/bree_serif"
                android:textAlignment="center"
                android:textColor="@color/peach"
                android:textSize="30dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/enterHours"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/peach_boarder"
                android:drawableLeft="@drawable/ic_baseline_access_time_24"
                android:drawablePadding="8dp"
                android:hint="Enter Hours"
                android:fontFamily="@font/bree_serif"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/petType"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/peach_boarder"
                android:drawableLeft="@drawable/ic_baseline_pets_24"
                android:drawablePadding="8dp"
                android:hint="Pet Type"
                android:fontFamily="@font/bree_serif"
                android:padding="8dp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/calcButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/peach"
                android:text="CALCULATE"
                android:fontFamily="@font/bree_serif"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/feesView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:text="Fess View"
                android:fontFamily="@font/bree_serif"
                android:textColor="@color/peach"
                android:textSize="18sp" />

            <Button
                android:id="@+id/backButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/peach"
                android:text="QUIT"
                android:fontFamily="@font/bree_serif"
                android:textColor="@color/white"
                android:textSize="18sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>